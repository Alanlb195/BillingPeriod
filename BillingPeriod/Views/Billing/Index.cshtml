@model BillingPeriod.Models.Period;

@{
    ViewData["Title"] = "Billing Page";
}

<h1 class="pt-5 pb-4 text-center">Billing Period</h1>

<div class="row">

    <div class="col-sm-12 
                col-md-8 offset-md-2
                col-lg-6 offset-lg-3">

        <form asp-action="BillingCalendar" method="post">
            <div class="form-group">
                <label asp-for="InitialDate"></label>
                <input type="date" class="form-control" asp-for="InitialDate" />
            </div>

            <div class="form-group">
                <label asp-for="FinalDate"></label>
                <input type="date" class="form-control" asp-for="FinalDate" />
            </div>

            <div class="form-group">
                <label asp-for="Periodicity"></label>
                <select class="form-control" asp-for="Periodicity">
                    <option value="1">Monthly</option>
                    <option value="2">Bimonthly</option>
                    <option value="6">Half-year</option>
                    <option value="12">Annual</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CuttingDay"></label>
                <input class="form-control" asp-for="CuttingDay" />
            </div>

            <div class="form-group">
                <label asp-for="PrintDay"></label>
                <input class="form-control" asp-for="PrintDay" />
            </div>

            <button class="btn btn-block btn-success" type="submit">Generate Billing Period</button>
        </form>

    </div>

</div>